{
  "name": "portfolio",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:generate:named": "drizzle-kit generate --name --config=drizzle.config.ts",
    "db:reset": "node server/scripts/reset-db.mjs",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "db:seed:admin": "node server/scripts/seed-admin.mjs",
    "db:seed": "node -r dotenv/config server/scripts/seed.mjs",
    "db:migrate:runtime": "node -r dotenv/config server/scripts/migrate.mjs",
    "db:studio": "drizzle-kit studio --config=drizzle.config.ts"
  },
  "dependencies": {
    "@nuxt/eslint": "^1.13.0",
    "@nuxt/image": "^2.0.0",
    "@nuxt/scripts": "^0.13.2",
