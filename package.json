    "@unhead/vue": "^2.1.1",
    "@vueuse/core": "^14.2.0",
    "@vueuse/nuxt": "^14.2.0",
    "better-auth": "^1.4.18",
    "drizzle-orm": "^0.45.1",
    "motion-v": "^1.10.2",
    "nodemailer": "^7.0.13",
    "nuxt": "^4.3.0",
    "nuxt-ripple": "^0.0.8",
    "pg": "^8.18.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vue": "^3.5.27",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@better-auth/cli": "^1.4.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1"
  },
  "overrides": {
    "@esbuild-kit/core-utils": {
      "esbuild": "0.25.12"
