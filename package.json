{
  "name": "portfolio",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:up": "docker compose -f docker-compose.dev.yml up -d",
    "db:down": "docker compose -f docker-compose.dev.yml down",
    "db:down:flush": "docker compose -f docker-compose.dev.yml down -v",
    "db:logs": "docker compose -f docker-compose.dev.yml logs -f postgres",
    "db:ps": "docker compose -f docker-compose.dev.yml ps",
    "db:restart": "npm run db:down && pnpm run db:up",
    "db:generate": "drizzle-kit generate",
    "db:generate:named": "drizzle-kit generate --name",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@nuxt/eslint": "^1.9.0",
    "@nuxt/image": "^1.11.0",
    "@nuxt/scripts": "^0.12.2",
    "@nuxt/ui": "^4.0.1",
    "@unhead/vue": "^2.0.19",
    "better-auth": "^1.3.27",
    "drizzle-orm": "^0.44.6",
    "nuxt": "^4.1.3",
    "pg": "^8.16.3",
    "typescript": "^5.9.3",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "eslint-plugin-format": "^1.0.2",
    "tsx": "^4.20.6"
  }
}